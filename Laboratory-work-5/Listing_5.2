class Graph:
    def __init__(self, vertices):
        self.V = vertices
        self.graph = []

    # Додавання ребра
    def add_edge(self, u, v, w):
        self.graph.append([u, v, w])

    # Знайти батька елемента i (з оптимізацією стиснення шляху)
    def find(self, parent, i):
        if parent[i] == i:
            return i
        return self.find(parent, parent[i])

    # Об'єднання двох множин x та y
    def union(self, parent, rank, x, y):
        xroot = self.find(parent, x)
        yroot = self.find(parent, y)

        if rank[xroot] < rank[yroot]:
            parent[xroot] = yroot
        elif rank[xroot] > rank[yroot]:
            parent[yroot] = xroot
        else:
            parent[yroot] = xroot
            rank[xroot] += 1

    # Основна функція Крускала
    def kruskal_mst(self):
        result = []  # Тут буде зберігатися МКД
        i = 0  # Індекс для відсортованих ребер
        e = 0  # Індекс для result[]

        # Крок 1: Сортування ребер за вагою
        self.graph = sorted(self.graph, key=lambda item: item[2])

        parent = []
        rank = []

        # Створення підмножин для кожної вершини
        for node in range(self.V):
            parent.append(node)
            rank.append(0)

        print("Алгоритм Крускала (Варіант 22)")
        print("Ребро  : Вага")
        print("--------------")

        # Поки не наберемо V-1 ребер
        while e < self.V - 1:
            # Беремо найменше ребро
            if i >= len(self.graph):
                 break
            u, v, w = self.graph[i]
            i = i + 1

            x = self.find(parent, u)
            y = self.find(parent, v)

            # Якщо не утворює цикл (різні батьки)
            if x != y:
                e = e + 1
                result.append([u, v, w])
                self.union(parent, rank, x, y)
                # Виводимо ребро (додаємо +1 для відображення 1-8)
                print(f"{u + 1} - {v + 1}  : {w}")

        # Підрахунок загальної ваги
        total_weight = sum([item[2] for item in result])
        print("--------------")
        print("Загальна вага МКД:", total_weight)

